{
  "name": "adam-ordonnance",
  "version": "0.1.0",
  "description": "Minimal Electron + React + TypeScript starter",
  "main": "dist/main/index.js",
  "type": "commonjs",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:electron": "wait-on dist/main/index.js http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electronmon dist/main/index.js",
    "lint": "tsc -p tsconfig.main.json --noEmit && tsc -p tsconfig.renderer.json --noEmit",
    "start": "npm run build && electron .",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac"
  },
  "build": {
    "appId": "com.adam.ordonnance",
    "productName": "Ordonnance",
    "files": [
      "dist/main/**/*",
      "dist/renderer/**/*",
      "src/scripts/**/*.ps1",
      "src/templates/**/*",
      "package.json"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    },
    "directories": {
      "output": "release"
    },
    "extraResources": [
      {
        "from": "src/scripts",
        "to": "scripts"
      }
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "csv-parse": "^6.1.0",
    "docxtemplater": "^3.67.6",
   
    "electron-store": "^11.0.2",
    "fs-extra": "^11.2.0",
    "pizzip": "^3.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.68.0",
    "react-router-dom": "^7.11.0",
    "xlsx": "^0.18.5",
    "zod": "^4.2.1"
  },
  "devDependencies": {
     "electron": "^30.0.8",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron-builder": "^25.1.8",
    "electronmon": "^2.0.2",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "wait-on": "^7.2.0"
  }
}
